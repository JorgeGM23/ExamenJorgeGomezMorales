<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.jorge.examenjorgegomezmorales.DetalleActivity"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tvNombreProductoDetalle"
            android:layout_width="259dp"
            android:layout_height="wrap_content"
            android:text="Producto"
            android:textSize="20dp"/>

        <TextView
            android:id="@+id/tvPrecioDetalle"
            android:layout_width="218dp"
            android:layout_height="wrap_content"
            android:text="precio"
            android:textColor="@android:color/holo_red_dark"
            android:textSize="20dp"
            android:layout_gravity="left"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="388dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tvCodigoDetalle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="25dp"
            android:layout_marginTop="25dp"
            android:text="Codigo de producto:"
            android:textSize="20dp"/>

        <TextView
            android:id="@+id/tvDescripcionDetalle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="25dp"
            android:text="Descripcion"
            android:textSize="20dp"/>

        <ImageView
            android:id="@+id/ivDetalle"
            android:layout_width="match_parent"
            android:layout_height="225dp"
            app:srcCompat="@mipmap/ic_launcher"
            android:textSize="20dp"/>
    </LinearLayout>

    <android.support.constraint.ConstraintLayout
        android:layout_width="437dp"
        android:layout_height="100dp">

        <ImageButton
            android:id="@+id/back"
            android:layout_width="94dp"
            android:layout_height="70dp"
            android:layout_marginStart="108dp"
            android:gravity="left"
            android:onClick="irAnterior"
            app:layout_constraintStart_toStartOf="parent"
            tools:layout_editor_absoluteY="0dp" />

        <ImageButton
            android:id="@+id/forward"
            android:layout_width="92dp"
            android:layout_height="70dp"
            android:gravity="right"
            android:onClick="irSiguiente"
            app:layout_constraintStart_toEndOf="@+id/back"
            tools:layout_editor_absoluteY="0dp" />
    </android.support.constraint.ConstraintLayout>




</LinearLayout>
